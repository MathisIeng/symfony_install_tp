{% extends 'base.html.twig' %}

{% block metatitle %}

    Les Catégories | SIUUUUUUU

{% endblock metatitle %}

{% block main %}

    <h1>Liste des catégories</h1>
    <ul>
        {% for category in categories %}
            <li>
                {# path me permet de me diriger vers la page qui contient l'id de la catégorie en question #}
                <a href="{{ path('category_show', { id: category.id }) }}">
                    {{ category.title }}
                </a>
            </li>
        {% endfor %}
    </ul>

{% endblock main %}